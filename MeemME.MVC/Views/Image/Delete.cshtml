@model MeemME.Models.ImageModels.ImageDetail

@{
    ViewBag.Title = "Delete";
}

<h2 style="font-family: 'Kristen ITC'; text-align:center;">Delete @Html.DisplayFor(model => model.Title)??</h2>

<h3 style="text-align:center">Are you sure you want to delete this?</h3>
<div style="text-align:center;">


    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Yes, Rid My Life Of This Meme" class="btn btn-primary btn-lg" style="background-color:khaki; border: none; color:black;margin:.5em;" />
            <a href="@Url.Action("Index", "Image")" class="btn btn-primary btn-lg" style="background-color:khaki; border: none; color:black;margin:.5em;">No, I Changed My Mind!</a>
        </div>
    }
</div>
